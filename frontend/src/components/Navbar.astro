---
// Este componente no necesita props ni lógica por ahora
---

<nav class="navbar is-primary" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" href="/">
      <strong>Mi Proyecto</strong>
    </a>

    <!-- Botón hamburguesa para móviles (Bulma lo maneja con JS) -->
    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarMenu">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarMenu" class="navbar-menu">
    <div class="navbar-start">
      <a class="navbar-item" href="/">
        Inicio
      </a>
      <a class="navbar-item" href="/productos">
        Productos
      </a>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <a class="button is-light">
            Iniciar sesión
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  // Script para el menú hamburguesa en móviles
  document.addEventListener('DOMContentLoaded', () => {
    const burger = document.querySelector('.navbar-burger');
    const menu = document.querySelector('.navbar-menu');

    burger?.addEventListener('click', () => {
      burger.classList.toggle('is-active');
      menu?.classList.toggle('is-active');
    });
  });
</script>